<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Titre de l’offre -->
        <TextView
            android:id="@+id/offerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apartment in Casablanca"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:fontFamily="@font/poppinssemibold" />

        <!-- Montant et date -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/bidAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Offered: 1,200 MAD"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:fontFamily="@font/poppinsmedium"
                android:layout_alignParentStart="true" />


        </RelativeLayout>



        <!-- Statut de l'offre -->
        <TextView
            android:id="@+id/bidStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Pending"
            android:padding="6dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsmedium"
            android:background="@drawable/status_pending_bg" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEEE"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp" />

        <!-- CardView du propriétaire -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/ownerAvatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/acount"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:background="@drawable/circle_mask" />

            <!-- Nom et rôle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ownerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daniel Foster"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/poppinsmedium" />

                <TextView
                    android:id="@+id/ownerRole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colocation Owner"
                    android:textSize="12sp"
                    android:textColor="#888"
                    android:fontFamily="@font/poppinsmedium" />
            </LinearLayout>

            <!-- Bouton d'appel -->
            <ImageView
                android:id="@+id/callOwner"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_call"
                android:backgroundTint="#F2F4F7"
                android:background="@drawable/circle_mask"
                android:padding="10dp"
                android:clipToOutline="true" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
