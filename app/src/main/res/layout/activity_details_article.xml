<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bookNowBtn"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Image -->

            <!-- Price and Type -->
            <ImageView
                android:id="@+id/apartmentImage"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@drawable/rounded_top_image"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_apartment" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:text="$1399"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:fontFamily="@font/poppinssemibold" />

                <TextView
                    android:layout_marginStart="4dp"
                    android:text="/ Month"
                    android:textSize="18sp"
                    android:textColor="#444"
                    android:fontFamily="@font/poppinsmedium" />

                <TextView
                    android:layout_marginStart="8dp"
                    android:text="Apartment"
                    android:textColor="@color/primary"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppinsmedium" />
            </LinearLayout>

            <!-- Address -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="23 beach Street, Los Angeles, CA"
                android:textSize="14sp"
                android:textColor="#888888"
                android:fontFamily="@font/poppinsmedium" />

            <!-- Features Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_bed"
                        app:tint="#444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/poppinsmedium"
                        android:text="3 Bedrooms"
                        android:textColor="#444"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_bath"
                        app:tint="#444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="2 Bathrooms"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="#444" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_area"
                        app:tint="#444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="70 m2"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppinsmedium"
                        android:textColor="#444" />
                </LinearLayout>
            </LinearLayout>

            <!-- Owner card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardCornerRadius="40dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/sample_avatar"
                        android:scaleType="centerCrop"
                        android:clipToOutline="true" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daniel Foster"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppinsmedium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Housing Prime Owner"
                            android:textSize="12sp"
                            android:textColor="#888888"
                            android:fontFamily="@font/poppinsmedium" />
                    </LinearLayout>



                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_call"
                        android:backgroundTint="#F2F4F7"
                        android:padding="10dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/circle_mask"
                        android:clipToOutline="true" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Title "Description" -->
            <TextView
                android:id="@+id/descriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="@font/poppinssemibold"
                android:layout_marginTop="24dp" />

            <!-- Description text -->
            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="This beautiful apartment is located in the heart of Los Angeles. It features spacious bedrooms, modern bathrooms, and a cozy atmosphere perfect for any family or individual looking to enjoy city life."
                android:textSize="14sp"
                android:textColor="#444444"
                android:lineSpacingExtra="4dp"
                android:fontFamily="@font/poppinsmedium" />



        </LinearLayout>
    </ScrollView>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/bookNowBtn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/primary"
        android:fontFamily="@font/poppinsmedium"
        android:text="Book Now"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
